<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tomphelps.pulseox.PulseOxMain">
    tools:showIn="@layout/activity_pulse_ox_main">
    <TextView
        android:id="@+id/pulseOxSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="Pulse Ox Waveform Settings"/>
    <LinearLayout
        android:id="@+id/freqLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pulseOxSettingsLabel"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pulseOxFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Frequency"
            />
        <EditText
            android:id="@+id/pulseOxFreqEditBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="numberDecimal"
            android:text="200"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dutyCycleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freqLayout"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dutyCycleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Duty Cycle"
            />
        <EditText
            android:id="@+id/dutyCycleEditbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="numberDecimal"
            android:text="0.5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/amplitudeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dutyCycleLayout"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/amplitudeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Amplitdue"
            />
        <EditText
            android:id="@+id/amplitudeEditBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:inputType="numberDecimal"
            android:text="0.25"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/powerSettingsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amplitudeLayout"
        android:gravity="center"
        android:padding="5dp"
        android:text="Power Signal Settings"
        />
    <LinearLayout
        android:id="@+id/sineFreqLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/powerSettingsLabel"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sineFreqLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Frequency"
            />
        <TextView
            android:id="@+id/sineFreqText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="14000 Hz"
            />
    </LinearLayout>
    <SeekBar
        android:id="@+id/sineFreqSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sineFreqLayout"
        />

    <Button
        android:id="@+id/NormalSignalTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick="normalTestStart"
        android:layout_below="@+id/sineFreqSeekBar"
        android:text="Normal Test"
        />

    <Button
        android:id="@+id/noNullButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Null Test"
        android:layout_below="@+id/sineFreqSeekBar"
        android:onClick="noNullTestStart"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
